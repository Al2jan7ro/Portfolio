<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  import { SplitText } from "gsap/SplitText";

  document.addEventListener("astro:page-load", () => {
    gsap.registerPlugin(ScrollTrigger, SplitText);

    // Animación de los títulos principales
    const heroTitle = new SplitText(".hero-title span", {
      type: "words,lines",
    });
    gsap.from(heroTitle.lines, {
      yPercent: 100,
      opacity: 0,
      stagger: 0.1,
      duration: 0.8,
      ease: "power3.out",
    });

    const heroSubtitle = new SplitText(".hero-subtitle", {
      type: "words,lines",
    });
    gsap.from(heroSubtitle.lines, {
      yPercent: 100,
      opacity: 0,
      stagger: 0.1,
      duration: 0.8,
      ease: "power3.out",
      delay: 0.5,
    });

    // Animación de la descripción sin romper la justificación
    gsap.from(".hero-desc", {
      opacity: 0,
      y: 50,
      duration: 1.2,
      delay: 1,
      ease: "power3.out",
      scrollTrigger: {
        trigger: ".hero-desc",
        start: "top 100%",
      },
    });

    // Animación de imagen con rebote
    gsap.from(".hero-title img", {
      scale: 0,
      rotate: -45,
      duration: 1,
      ease: "back.out(1.7)",
      delay: 0.5,
    });

    // Animar el correo
    gsap.from("#myinfo", {
      y: 50,
      opacity: 0,
      duration: 1.2,
      delay: 1,
      ease: "power3.out",
    });
  });
</script>