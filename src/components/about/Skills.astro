<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  import SplitText from "gsap/SplitText";

  gsap.registerPlugin(ScrollTrigger, SplitText);

  document.addEventListener("astro:page-load", () => {
    let ctx = gsap.context(() => {
      // 游댳 SplitText en t칤tulo y subt칤tulo
      const titleSplit = new SplitText("#skills-title", { type: "chars" });
      const subtitleSplit = new SplitText("#skills-subtitle", { type: "words" });

      gsap.from(titleSplit.chars, {
        opacity: 0,
        y: 60,
        duration: 1,
        stagger: 0.05,
        ease: "power3.out",
        scrollTrigger: {
          trigger: "#skills-title",
          start: "top 80%",
        },
      });

      gsap.from(subtitleSplit.words, {
        opacity: 0,
        y: 40,
        duration: 0.8,
        stagger: 0.08,
        ease: "power2.out",
        scrollTrigger: {
          trigger: "#skills-subtitle",
          start: "top 85%",
        },
      });

          gsap.utils.toArray<HTMLElement>(".card-skill").forEach((card, i) => {
            gsap.from(card, {
              y: 50,
              opacity: 0,
              duration: 0.9,
              delay: i * 0.15,
              ease: "power2.out",
              scrollTrigger: {
                trigger: card,
                start: "top 85%",
              },
            });
          });

    });

    return () => ctx.revert();
  });
</script>
