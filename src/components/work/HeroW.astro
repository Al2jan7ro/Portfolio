<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  import { SplitText } from "gsap/SplitText";

  document.addEventListener("astro:page-load", () => {
    gsap.registerPlugin(ScrollTrigger, SplitText);

    let ctx = gsap.context(() => {
      // Animación del título "WORK"
      gsap.from("#work-title", {
        y: 100,
        opacity: 0,
        duration: 1.5,
        ease: "power3.out",
        scrollTrigger: {
          trigger: "#work-title",
          start: "top 80%",
          toggleActions: "play none none none",
          once: true,
        },
      });

      // Subtítulo "PROJECTS 2020 - 2025" con SplitText palabra por palabra
      const splitProjects = new SplitText("#projects-title", { 
        type: "words",
        wordsClass: "block overflow-hidden"
      });

      gsap.from(splitProjects.words, {
        yPercent: 100,
        opacity: 0,
        stagger: 0.12,
        duration: 0.8,
        ease: "power3.out",
        scrollTrigger: {
          trigger: "#projects-title",
          start: "top 80%",
          toggleActions: "play none none none",
          once: true,
        },
      });

      // Animación de los proyectos con fade + slide up
      (gsap.utils.toArray("#projects-grid a") as HTMLElement[]).forEach((project, index) => {
        gsap.from(project, {
          y: 50,
          opacity: 0,
          duration: 1,
          ease: "power2.out",
          delay: index * 0.1,
          scrollTrigger: {
            trigger: project,
            start: "top 95%",
            toggleActions: "play none none none",
            once: true,
          },
        });
      });
    });

    // Limpieza cuando se cambia de página
    document.addEventListener("astro:before-swap", () => {
      if (ctx) ctx.revert();
    }, { once: true });
  });
</script>
